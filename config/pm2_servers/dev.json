{
  "apps" : [{
    "name"       : "bpm_api-dev",
    "script"     : "./src/api/index.js",
    "watch"      : ["./src/api", "./src/isomorphic", "config"],
    "instances"   : 1,
    "autorestart" : true,
    "env": {
        "NODE_ENV": "development",
    }
  }, {
    "name"       : "bpm_frontend-dev",
    "script"     : "./node_modules/.bin/webpack-dev-server",
    "args"       : [
        "--content-base=build",
        "--devtool=cheap-module-inline-source-map",
        "--hot",
        "--inline",
        "--quiet",
        "--progress"
    ],
    "instances"   : 1,
    "autorestart" : true,
    "env": {
        "NODE_ENV": "development",
    }
  }]
}
