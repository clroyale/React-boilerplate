{
    "apps": [{
            "autorestart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "instances": 1,
            "name": "bpm_api-dev",
            "script": "./src/api/index.js",
            "node_args": "--harmony --require reify --require async-to-gen/register",
            "watch": [
                "./src/api",
                "./src/isomorphic",
                "config"
            ]
        }, {
            "args": [
                "--config=./src/frontend/webpack.config.babel.js",
                "--content-base=build/frontend",
                "--devtool=eval",
                "--hot",
                "--inline",
                "--quiet",
                "--progress",
                "--port=8080"
            ],
            "autorestart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "instances": 1,
            "name": "bpm_frontend-dev",
            "script": "./node_modules/.bin/webpack-dev-server"
        }, {
            "args": [
                "--config=./src/admin/webpack.config.babel.js",
                "--content-base=build/admin",
                "--devtool=eval",
                "--hot",
                "--inline",
                "--quiet",
                "--progress",
                "--port=8081"
            ],
            "autorestart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "instances": 1,
            "name": "bpm_admin-dev",
            "script": "./node_modules/.bin/webpack-dev-server"
        }]
}
